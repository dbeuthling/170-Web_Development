<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Files</title>
</head>

  <body>
    <p><% @files.each do |file| %>
      <a href="<%= file %>"><%= file %></a></p>
    <% end %>
    <p>
    <% if params[:sort] == "z-a" %>
      <a href="/">Sort A - Z</a>
    <% else %>
      <a href="/?sort=z-a">Sort Z - A</a>
    <% end %>
  </body>
</html>
